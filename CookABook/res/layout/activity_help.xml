<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#f2cccc"
        android:padding="12dp"
        android:text="How it works"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView1"
        android:background="#fff7f7" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="12dp"
            android:text="To use this app you say some pre-defined keywords to the device and it will talk the recipe back to you with text-to-speech."
            android:textColor="#000000"
            android:typeface="serif"
            android:textSize="14sp" />
        
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView1"
            android:padding="12dp"
            android:text="Keywords:"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView2"
            android:padding="12dp"
            android:text="'Next' - Reads the next sentence in the recipe.
            
'Previous' - Reads the previous sentence in the recipe.

'Repeat' - Reads the last read sentence again.

'Close' - Stops the reading of the recipe."
			android:typeface="serif"
            android:textColor="#000000"
            android:textSize="14sp" />
        
    </RelativeLayout>

</RelativeLayout>